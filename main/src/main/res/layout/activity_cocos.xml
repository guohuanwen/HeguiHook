<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main.MainActivity">

    <Button
        android:id="@+id/get_pid_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="getPid" />

    <Button
        android:id="@+id/exit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="exit" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bind_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bind Remote" />

        <Button
            android:id="@+id/unbind_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unbind Remote" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/remote_bind_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remote Bind Me" />

        <Button
            android:id="@+id/remote_unbind_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remote Unbind Me" />
    </LinearLayout>

</LinearLayout>